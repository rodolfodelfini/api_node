                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema" : {
                                "$ref": "#/components/schemas/Users"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "usuario":"teste",
                                        "password": "password123"
                                    }
                                }
                            }
                        }
                    } 
                 },
                "responses" : {
                    "200": {
                        "description": "ok"
                    },
                    "400": {
